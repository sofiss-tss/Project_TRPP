<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/service_layout"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/bg"
    android:focusable="true">

    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/bg"
        android:scaleType="centerCrop"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/montserrat_thin"
        android:text="Добро пожаловать!"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:paddingBottom="110dp"
        android:text="Будьте в курсе всех деловых мероприятий с нашим агрегатором бизнес-ивентов.\n\n Открывайте новые возможности для вашего бизнеса и налаживайте полезные связи с профессионалами.\n\n Переходите в приложение и расширяйте свой бизнес-круг прямо сейчас!"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>